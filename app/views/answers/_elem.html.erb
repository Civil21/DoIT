<div class="row">
	<div class="col-1">
		<%=link_to positiv_vote_path(answer.id) do%>
		<%= image_tag "up-arrow.svg", :heigth=>"18", :width=>"18", :class=>"mx-auto d-block" %>
		<%end%>
		<h3 class="text-center text-dark" style="margin: 0; margin-left: 2px;"><%=answer.scores%></h3>
		<%=link_to negativ_vote_path(answer.id) do%>
		<%= image_tag "down-arrow.svg", :heigth=>"18", :width=>"18", :class=>"mx-auto d-block"  %>
		<%end%>
	</div>
	<div class="col">
	<%=answer.text.html_safe%>
		<%=form_for :anscomment,  url:answer_anscomment_path(answer.id) do |f| %>
		<small><b>
			<%=link_to "Видалити", question_answer_path(answer.question.id,answer.id), method: :delete, :class=>"text-secondary"%>
			&emsp;
			<%=render "anscomments/form", f:f%>
		</b></small>
		<%end%>
	<h6 class="text-right text-dark"><%=image_tag answer.user.avatar.url, width:20,height:20%> <b><%=answer.user.nickname%></b></h6>
</div>
</div>
<hr>